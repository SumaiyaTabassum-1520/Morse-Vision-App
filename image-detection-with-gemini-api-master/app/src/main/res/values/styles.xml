<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Other styles can go here -->

    <!-- Define the style for navigation item text appearance -->
    <style name="NavigationTextStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">30sp</item> <!-- Adjust to the desired text size -->
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item> <!-- Optional: Adjust text color -->
    </style>
    <style name="CustomPreference" parent="Preference.Material">
        <item name="android:layout_margin">8dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:background">@drawable/shadow_background</item>
        <item name="android:textAppearance">@style/NavigationTextStyle</item>
    </style>
</resources>
