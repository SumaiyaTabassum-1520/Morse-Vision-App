<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeFragment"
    android:background="@color/green"
    android:padding="16dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        tools:ignore="DisableBaselineAlignment">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="start">

            <Button
                android:id="@+id/txt"
                android:layout_width="170dp"
                android:layout_height="150dp"
                android:background="@drawable/my_button"
                android:text="Text Recognition"
                android:textStyle="bold"
                android:textSize="20sp"
                tools:ignore="HardcodedText" />

            <!--android:drawableTop="@drawable/logo1"-->


            <Button
                android:id="@+id/color"
                android:layout_width="170dp"
                android:layout_height="150dp"
                android:background="@drawable/my_button"
                android:text="Color Recognition"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                tools:ignore="HardcodedText" />
            <!--android:drawableTop="@drawable/logo2"-->
            <Button
                android:id="@+id/magnifier"
                android:layout_width="170dp"
                android:layout_height="150dp"
                android:background="@drawable/my_button"
                android:text="Magnifier"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                tools:ignore="HardcodedText" />
            <!--android:drawableTop="@drawable/logo3"-->

            <Button
                android:id="@+id/food"
                android:layout_width="170dp"
                android:layout_height="150dp"
                android:background="@drawable/my_button"
                android:text="Food Label"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                tools:ignore="HardcodedText" />
            <!--android:drawableTop="@drawable/logo4"-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="end">

            <!-- Four Buttons in Right Column -->
            <Button
                android:id="@+id/imgDes"
                android:layout_width="170dp"
                android:layout_height="150dp"
                android:background="@drawable/my_button"
                android:text="Image Description"
                android:textStyle="bold"
                android:textSize="20sp"
                tools:ignore="HardcodedText" />
            <!-- android:drawableTop="@drawable/logo5"-->

            <Button
                android:id="@+id/morse"
                android:layout_width="170dp"
                android:layout_height="150dp"
                android:background="@drawable/my_button"
                android:text="Morse Translation"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                tools:ignore="HardcodedText" />
            <!--android:drawableTop="@drawable/logo6"-->

            <Button
                android:id="@+id/buttonSelectPdf"
                android:layout_width="170dp"
                android:layout_height="150dp"
                android:background="@drawable/my_button"
                android:text="Documents"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                tools:ignore="HardcodedText" />
            <!--android:drawableTop="@drawable/logo7"-->
            <Button
                android:id="@+id/friend"
                android:layout_width="170dp"
                android:layout_height="150dp"
                android:background="@drawable/my_button"
                android:text="+Add Friend"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                tools:ignore="HardcodedText" />
            <!--android:drawableTop="@drawable/logo8"-->

        </LinearLayout>

    </LinearLayout>

</LinearLayout>