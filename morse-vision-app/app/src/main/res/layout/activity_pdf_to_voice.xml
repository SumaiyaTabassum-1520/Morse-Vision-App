<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="PdfExtractor.PdfToVoiceActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/main"
        app:layout_constraintLeft_toLeftOf="@id/main"
        app:layout_constraintRight_toRightOf="@id/main"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.50"
        android:id="@+id/scrollV">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:id="@+id/pdfTv"
        android:text=""
        />
    </ScrollView>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/pageNumberTv"
    app:layout_constraintTop_toBottomOf="@id/scrollV"
    app:layout_constraintLeft_toLeftOf="@id/main"
    app:layout_constraintRight_toRightOf="@id/main"
    android:text="page number:" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="horizontal"
    android:gravity="center"
    app:layout_constraintTop_toBottomOf="@id/scrollV"
    app:layout_constraintBottom_toBottomOf="@id/main"
    app:layout_constraintHeight_default="percent"
    app:layout_constraintHeight_percent="0.50">

<Button
    android:id="@+id/previousBtn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="start|center_vertical"
    android:text="Prev" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    >
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/pathTv"
        android:text=""
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ChooseBtn"
        android:text="Choose"
        />
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/voiceBtn"
        android:contentDescription="voice"
        android:background="@drawable/voice"


        />
</LinearLayout>

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/nextBtn"
    android:layout_gravity="end|center_vertical"
    android:text="Next"
    />


</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>