<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="FaceRecognition.AddFriend">

    <!-- Recognize Card (Top Half) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/recognize_card"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/register_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.5">

        <Button
            android:id="@+id/recognize_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/lavender"
            android:text="Recognize"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            tools:ignore="TextContrastCheck" />

    </androidx.cardview.widget.CardView>

    <!-- Register Card (Bottom Half) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/register_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/recognize_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.5">

        <Button
            android:id="@+id/register_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/LightGreen"
            android:text="Register"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            tools:ignore="TextContrastCheck" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
